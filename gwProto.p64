--[[pod_format="raw",created="2026-01-04 22:18:49",modified="2026-01-04 23:48:23",revision=13]]
function _init()
	_char_x = 0
	_char_y = 0
end

function _update()
	if btn() == 4 then
		_char_x += -2
	end
	if btn() == 8 then
		_char_x += 2
	end
	if btn() == 1 then
		_char_y += -2
	end
	if btn() == 2 then
		_char_y += 2
	end
end

function draw_character()
	spr(1, _char_y, _char_x)
end

function _draw()
	cls(0)
	map()
	draw_character()
end
